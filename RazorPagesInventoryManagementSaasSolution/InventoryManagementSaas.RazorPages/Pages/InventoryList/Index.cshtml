@page
@model InventoryManagementSaas.RazorPages.Pages.InventoryList.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Inventory[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory[0].QuantityInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory[0].ReorderLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory[0].UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory[0].Supplier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Inventory) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityInStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReorderLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.InventoryId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.InventoryId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.InventoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
