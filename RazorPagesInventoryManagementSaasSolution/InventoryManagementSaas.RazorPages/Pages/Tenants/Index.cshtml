@page
@model InventoryManagementSaas.RazorPages.Pages.Tenants.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tenant[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tenant[0].Host)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tenant) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Host)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TenantId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TenantId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TenantId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
